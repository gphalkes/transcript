.POSIX:

# Installation prefix (also defined in Makefile.libtranscript)
prefix=/usr/local

# Install program to use (should provide -m and -d options)
INSTALL=install

# Miscelaneous install paths
bindir=$(prefix)/bin
libdir=$(prefix)/lib
docdir=$(prefix)/share/doc/libtranscript-<VERSION>
mandir=$(prefix)/share/man
includedir=$(prefix)/include
pkgconfigdir=$(libdir)/pkgconfig

all: lib linkltc ucm2ltc

lib:
	@$(MAKE) -f Makefile.libtranscript

linkltc: lib
	@$(MAKE) -f Makefile.linkltc

ucm2ltc: lib
	@$(MAKE) -f Makefile.ucm2ltc

.PHONY: all clean dist-clean install lib linkltc ucm2ltc

clean:
	@$(MAKE) -f Makefile.libtranscript clean
	@$(MAKE) -f Makefile.linkltc clean
	@$(MAKE) -f Makefile.ucm2ltc clean
	rm -rf libtranscript.pc

dist-clean:
	@$(MAKE) -f Makefile.libtranscript dist-clean
	@$(MAKE) -f Makefile.linkltc dist-clean
	@$(MAKE) -f Makefile.ucm2ltc dist-clean
	rm -rf Makefile Makefile.libtranscript Makefile.linkltc Makefile.ucm2ltc config.log libtranscript.pc

libtranscript.pc: libtranscript.pc.in
	@echo '/^prefix=/c\' > .sedscript
	@echo 'prefix=$(prefix) >> .sedscript
	sed -f .sedscript $< > $@

install: all libtranscript.pc
	$(INSTALL) -d $(libdir)/transcript
	$(INSTALL) `echo src/.libs/libtranscript* | sed 's/[^ ]*\.la[^ ]*//g'` $(libdir)
	$(INSTALL) src/tables/.libs/*.ltc src/modules/.libs/*.ltc $(libdir)/transcript
	$(INSTALL) -d $(includedir)/transcript/transcript
	$(INSTALL) src/transcript.h src/moduledefs.h src/api.h src/bool.h src/handle.h src/utf.h $(includedir)/transcript/transcript
	$(INSTALL) -d $(docdir)/API/search
	find doc/API -type f | xargs -IX $(INSTALL) X $(docdir)/X
	$(INSTALL) -d $(pkgconfigdir)
	$(INSTALL) libtranscript.pc $(pkgconfigdir)
	$(INSTALL) -d $(bindir)
	$(INSTALL) src.util/linkltc/linkltc $(bindir)
	$(bindir)/linkltc $(libdir)/transcript/*.ltc
	[ -f src.util/ucm2ltc/ucm2ltc ] && $(INSTALL) src.util/ucm2ltc/ucm2ltc $(bindir)
