.POSIX:

# C-compiler flags
CFLAGS=-O2

# Installation prefix
prefix=/usr/local

all: src.util/linkltc/linkltc

.PHONY: all clean dist-clean
.SUFFIXES: .c .o

OBJECTS_LINKLTC=<OBJECTS_LINKLTC>

clean:
	rm -rf src.util/linkltc/*.o po/*.mo

dist-clean: clean
	rm -rf src.util/linkltc/linkltc

.c.o:
	$(CC) $(CFLAGS) -Isrc -c -o $@ $<

src.util/linkltc/linkltc: $(OBJECTS_LINKLTC) src/libtranscript.la
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $(OBJECTS_LINKLTC) $(LDLIBS) -Lsrc/.libs -ltranscript

